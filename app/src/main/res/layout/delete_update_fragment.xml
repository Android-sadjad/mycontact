<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/add_ff"

    >









    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="mohammad"
        android:id="@+id/name_tv"

        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
android:textSize="30sp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"

        android:textColorHint="#DDD7D7"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/white"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/phone_tv"
        android:text="09151515151"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
android:textSize="20sp"
        android:textColorHint="#DDD7D7"
        />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Eddite"
            android:id="@+id/update_btn"
            app:layout_constraintTop_toBottomOf="@id/phone_tv"
            app:layout_constraintRight_toLeftOf="@id/delete_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginLeft="40dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete"
            app:layout_constraintTop_toBottomOf="@id/phone_tv"
          app:layout_constraintLeft_toRightOf="@id/update_btn"
           app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/delete_btn"
            android:layout_marginRight="45dp"

            />





    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/eddit_view"
        android:clickable="false"
        android:elevation="10dp"
       />

    </androidx.constraintlayout.widget.ConstraintLayout>